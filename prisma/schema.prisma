generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  id       Int     @id @default(autoincrement())
  task     String?
  status   Int?
  author   User?   @relation(fields: [authorId], references: [id])
  authorId Int?
}

model User {
  id   Int     @id @default(autoincrement())
  name String?
  role Role    @default(USER)
  Todo Todo[]
}

enum Role {
  USER
  ADMIN
  MODERATOR
}
